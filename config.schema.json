{
  "pluginAlias": "TesyHeater",
  "pluginType": "accessory",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Tesy Heater"
      },
      "device_id": {
        "title": "Device ID",
        "type": "string",
        "required": true
      },
      "username": {
        "title": "Tesy Account Email",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "Tesy Account Password",
        "type": "string",
        "required": true,
        "format": "password"
      },
      "userid": {
        "title": "Tesy User ID (optional)",
        "type": "string",
        "required": false
      },
      "pullInterval": {
        "title": "Refresh Interval (ms)",
        "type": "integer",
        "default": 10000
      },
      "minTemp": {
        "title": "Minimum Temperature",
        "type": "number",
        "default": 10
      },
      "maxTemp": {
        "title": "Maximum Temperature",
        "type": "number",
        "default": 30
      }
    }
  }
}